            [ERROR]   +-org.springframework.cloud:spring-cloud-starter-bus-amqp:jar:5.0.1:provided
            [ERROR]     +-org.springframework.cloud:spring-cloud-starter-stream-rabbit:jar:5.0.1:provided
            [ERROR]       +-org.springframework.cloud:spring-cloud-stream-binder-rabbit:jar:5.0.1:provided
            [ERROR]         +-org.springframework.cloud:spring-cloud-stream:jar:5.0.1:provided
            [ERROR]           +-org.jetbrains.kotlinx:kotlinx-coroutines-reactor:jar:1.10.2:provided
            [ERROR]             +-org.jetbrains.kotlinx:kotlinx-coroutines-core-jvm:jar:1.10.2:provided
