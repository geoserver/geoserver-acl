            [ERROR]           +-org.jetbrains.kotlin:kotlin-reflect:jar:2.2.21:provided
            [ERROR]             +-org.jetbrains.kotlin:kotlin-stdlib:jar:2.2.21:provided
            [ERROR]               +-org.jetbrains:annotations:jar:13.0:provided
