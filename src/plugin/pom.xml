    <dependency>
      <groupId>xmlunit</groupId>
      <artifactId>xmlunit</artifactId>
      <version>1.6</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>1.16.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>gs_dev</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <gs.version>2.25-SNAPSHOT</gs.version>
        <gt.version>31-SNAPSHOT</gt.version>
      </properties>
    </profile>
    <profile>
      <id>gs_stable</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <gs.version>2.24.0</gs.version>
        <gt.version>30.0</gt.version>
      </properties>
    </profile>
  </profiles>
