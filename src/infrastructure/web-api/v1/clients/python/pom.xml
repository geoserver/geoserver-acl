<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.geoserver.acl.infrastructure</groupId>
    <artifactId>gs-acl-webapi-v1-clients-parent</artifactId>
    <version>${revision}</version>
  </parent>
  <artifactId>gs-acl-webapi-v1-python-client</artifactId>
  <description>Generated Python Client: For consumption by Python clients</description>
  <dependencies></dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openapitools</groupId>
        <artifactId>openapi-generator-maven-plugin</artifactId>
        <executions>
          <execution>
            <?m2e ignore?>
            <id>generate-python-client</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <skip>${openapi-codegen-skip}</skip>
              <inputSpec>${project.basedir}/../../../spec/src/main/resources/geoserver-acl-web-api-spec-v1.yaml</inputSpec>
              <!-- see https://openapi-generator.tech/docs/generators/python -->
              <generatorName>python</generatorName>
              <!-- This is the Python import name. It must use underscores. -->
              <packageName>geoserver_acl_client_v1</packageName>
              <configOptions>
                <!-- This is the PyPI distribution name (pip install). It should use dashes. -->
                <projectName>geoserver-acl-client-v1</projectName>
                <library>asyncio</library>
                <generateSourceCodeOnly>false</generateSourceCodeOnly>
              </configOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
